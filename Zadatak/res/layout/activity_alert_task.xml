<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/beginTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="123dp"
        android:text="BEGIN TASK" />

    <Button
        android:id="@+id/postponeTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/beginTask"
        android:layout_marginTop="67dp"
        android:text="POSTPONE TASK" />
    
    <Button
        android:id="@+id/moveTaskToTomorrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/postponeTask"
        android:layout_marginTop="67dp"
        android:text="Move to tomorrow" />

</RelativeLayout>
