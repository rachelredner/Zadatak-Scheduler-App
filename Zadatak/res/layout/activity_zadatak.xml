<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background = "@drawable/hourglass1"
    android:layout_height="fill_parent" >
    
    
    <TextView
        android:id = "@+id/Welcome"
        android:layout_centerHorizontal = "true"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "Welcome to"
        android:textSize="30dip"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="12dip"
        />
    <TextView
        android:id = "@+id/Welcome2"
        android:layout_centerHorizontal = "true"
        android:layout_below="@id/Welcome"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "Zadatak"
        android:textSize="36dip"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="4dip"
        />
    <Button
        android:id="@+id/newtask"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below = "@+id/Welcome2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#77282828"
        android:textColor="#000000"
        android:textSize = "22dip"
        android:layout_marginLeft = "35dip"
        android:layout_marginRight= "15dip"
        android:text="Add a New Task" />

    <Button
        android:id="@+id/tasklist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newtask"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:background="#77282828"
        android:textColor="#000000"
        android:textSize = "22dip"
        android:layout_marginLeft = "35dip"
        android:layout_marginRight= "15dip"
        android:text="View / Edit My Tasks" />

    <Button
        android:id="@+id/todaystasks"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/myprofile"
        android:layout_marginBottom="46dp"
        android:background="#77282828"
        android:textColor="#000000"
        android:textSize = "22dip"
        android:layout_marginLeft = "35dip"
        android:layout_marginRight= "15dip"
        android:text="Today's Tasks" />
    
        <Button
        android:id="@+id/myprofile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="95dp"
		android:background="#77282828"
        android:textColor="#000000"
        android:textSize = "22dip"
        android:layout_marginLeft = "35dip"
        android:layout_marginRight= "15dip"
        android:text="My Profile" />

</RelativeLayout>
