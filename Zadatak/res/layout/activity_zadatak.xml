<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background = "@drawable/hourglass1"
    android:screenOrientation = "portrait"
    android:configChanges="keyboardHidden|orientation"
    android:layout_height="fill_parent" >
    
    
    
    <TextView
        android:id = "@+id/Welcome"
        
        android:layout_centerHorizontal = "true"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginTop="12dip"
        

        android:textSize="33dip"
        android:textStyle="bold"
        android:textColor="#000000"
        
        android:shadowColor="#BBBBFF"
        android:shadowRadius = "7"
        
        android:text = "Welcome to"
         />
    
        <TextView
        android:id = "@+id/Welcome2"
        
        android:layout_centerHorizontal = "true"
        android:layout_below="@id/Welcome"
        android:layout_marginTop="1dip"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        

        android:textSize="39dip"
        android:textStyle="bold"
        
        android:textColor="#000000"
        android:shadowColor="#BBBBFF"
        android:shadowRadius="7"
        
        android:text = "Zadatak"
        />
        

    
    <Button
       android:id = "@+id/newtask"  
      
       android:text="Add a \n New Task"
       android:textSize = "24dip"
       android:textStyle = "bold"
       android:shadowColor="#A0A0DE"
       android:shadowRadius = "7"  
       
       android:layout_width="fill_parent"
       android:layout_toLeftOf = "@+id/CENTER"
       android:layout_marginRight = "4dip"
       
       
       android:layout_height="fill_parent"
       android:layout_above = "@+id/CENTER"
       android:layout_marginBottom = "3dip"
       
       android:layout_below = "@+id/Welcome2"
       android:layout_marginTop = "10dip"
       
       android:layout_alignParentLeft = "true"
       android:layout_marginLeft="10dip"
       
       
       />
    
    
    
    
     
    <Button 
        android:id = "@+id/tasklist"
        
        android:text = "Edit My \n Tasks"
        android:textSize = "24dip"
        android:textStyle = "bold"
        android:shadowColor = "#A0A0DE"
        android:shadowRadius = "7"
        
        android:layout_width = "fill_parent"
        android:layout_toRightOf = "@+id/CENTER"
        android:layout_marginLeft = "4dip"
        
        android:layout_height = "fill_parent"
        android:layout_above = "@+id/CENTER"
        android:layout_marginBottom = "3dip"
        
        android:layout_below = "@+id/Welcome2"
        android:layout_marginTop = "10dip"
        
        android:layout_alignParentRight = "true"
        android:layout_marginRight = "10dip"
        />
    
    
       <TextView 
        android:id = "@+id/CENTER"
        android:text = " " 
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_centerInParent = "true"
        />          

    
    <Button
        android:id = "@+id/todaystasks"
        
        android:text = "Today's \n Tasks"
        android:textSize = "24dip"
        android:shadowColor = "#A0A0DE"
        android:shadowRadius = "7"
        android:textStyle = "bold"
        
       android:layout_width="fill_parent"
       android:layout_toLeftOf = "@+id/CENTER"
       android:layout_marginRight = "4dip"
        
        android:layout_height = "fill_parent"
        android:layout_below = "@+id/CENTER"
        android:layout_marginTop = "3dip"
        
        android:layout_alignParentBottom = "true"
        android:layout_marginBottom = "122dip"
        
        android:layout_alignParentLeft = "true"
        android:layout_marginLeft = "10dip"       
       
        />
    

    
    <Button
        android:id = "@+id/myprofile"
        
        android:text = "My \n Profile"
        android:textSize = "24dip"
        android:textStyle = "bold"
        android:shadowColor = "#A0A0DE"
        android:shadowRadius = "7"
        
        android:layout_width = "fill_parent"
        android:layout_toRightOf="@+id/CENTER"
        android:layout_marginLeft="4dip"
        
        
        android:layout_height = "fill_parent"
        android:layout_below = "@+id/CENTER"
        android:layout_marginTop = "3dip"
        
        android:layout_alignParentBottom = "True"
        android:layout_marginBottom = "122dip"
        
        android:layout_alignParentRight = "true"
        android:layout_marginRight = "10dip"

    
    />
    
    
    
    

        
        <TextView 
        android:id  = "@+id/about"
            
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_above = "@+id/about2" 
        android:layout_alignParentRight = "true"
        android:layout_marginRight = "10dip"
                
        android:textSize = "14dip"
        
        android:text = "An open source project by"

            />
        
                <TextView 
        android:id  = "@+id/about2"
            
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_above = "@+id/about3" 
        android:layout_alignParentRight = "true"
        android:layout_marginRight = "10dip"
        
        
        android:textSize = "14dip"
        android:textStyle = "bold"
        
        android:text = "The Rensselaer Center"

            />
                
                
                        <TextView 
        android:id  = "@+id/about3"
            
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_above = "@+id/about4"
        android:layout_alignParentRight = "true"
        android:layout_marginRight = "10dip"
  
        
        android:textSize = "14dip"
        android:textStyle = "bold"
        
        android:text = "for Open Source Software"

            />
        <TextView
                            
        android:id  = "@+id/about4"
            
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_alignParentBottom = "true" 
        android:layout_alignParentRight = "true"
        android:layout_marginRight = "10dip"
        android:layout_marginBottom = "10dip"
        
        android:textSize = "14dip"
        android:textStyle = "bold"
        
        android:text = "http://rcos.rpi.edu/"

            />
                
                        
                        

</RelativeLayout>
