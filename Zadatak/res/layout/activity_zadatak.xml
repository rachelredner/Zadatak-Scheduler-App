<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background = "@drawable/hourglass1"
    android:screenOrientation = "portrait"
    android:configChanges="keyboardHidden|orientation"
    android:layout_height="fill_parent" >
    
    
    
    <TextView
        android:id = "@+id/Welcome"
        
        android:layout_centerHorizontal = "true"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginTop="12dip"
        

        android:textSize="33dip"
        android:textStyle="bold"
        android:textColor="#000000"
        
        android:shadowColor="#BBBBFF"
        android:shadowRadius = "7"
        
        android:text = "Welcome to"
         />
    
    <TextView
        android:id = "@+id/Welcome2"
        
        android:layout_centerHorizontal = "true"
        android:layout_below="@id/Welcome"
        android:layout_marginTop="1dip"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        

        android:textSize="39dip"
        android:textStyle="bold"
        
        android:textColor="#000000"
        android:shadowColor="#BBBBFF"
        android:shadowRadius="7"
        
        android:text = "Zadatak"
        />
    
    <Button
        android:id="@+id/newtask"
        
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above = "@+id/tasklist"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dip"
        android:layout_marginLeft = "10dip"
        android:layout_marginRight = "10dip"
        

        
        android:textColor="#000000"
        android:textSize = "26dip"

         
        android:shadowColor="#CCCCCC"
        android:shadowRadius="4"
        
        android:text="Add a New Task"
        />

    <Button
        android:id="@+id/tasklist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/center"
        android:layout_marginLeft = "10dip"
        android:layout_marginRight = "10dip"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        
        
        
        android:textColor="#000000"
        android:textSize = "26dip"

        
        android:shadowColor="#CCCCCC"
        android:shadowRadius="4"
        
        android:text="View / Edit My Tasks" 
	 />
 
    
    <!-- A dummy text view to find the center of the screen --> 
    <TextView 
        android:id = "@+id/center"
        android:layout_width = "wrap_content" 
        android:layout_height = "wrap_content" 
        android:textSize="2dip"
        android:layout_centerInParent="true"
        android:text = " "    
        
        />

    <Button
        android:id="@+id/todaystasks"
        
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft = "10dip"
        android:layout_marginRight = "10dip"
        
  
        

        android:textSize = "26dip"
   
        
        android:shadowColor="#CCCCCC"
        android:shadowRadius="4"

       android:text="Today's Tasks"               
       />

  
        <Button
        android:id="@+id/myprofile"
        
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below = "@+id/todaystasks"
        android:layout_marginTop="40dp"
        android:layout_marginLeft = "10dip"
        android:layout_marginRight = "10dip"
        

		
        android:textColor="#000000"
        android:textSize = "26dip"
        
        android:shadowColor="#CCCCCC"
        android:shadowRadius="4"

        android:text="My Profile" 
        />
        
        <TextView 
        android:id  = "@+id/about"
            
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_above = "@+id/about2" 
        android:layout_alignParentRight = "true"
        android:layout_marginRight = "10dip"
                
        android:textSize = "14dip"
        
        android:text = "An open source project by"

            />
        
                <TextView 
        android:id  = "@+id/about2"
            
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_above = "@+id/about3" 
        android:layout_alignParentRight = "true"
        android:layout_marginRight = "10dip"
        
        
        android:textSize = "14dip"
        android:textStyle = "bold"
        
        android:text = "The Rensselaer Center for "

            />
                
                
                        <TextView 
        android:id  = "@+id/about3"
            
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_alignParentBottom = "true" 
        android:layout_alignParentRight = "true"
        android:layout_marginRight = "10dip"
        android:layout_marginBottom = "10dip"
        
        android:textSize = "14dip"
        android:textStyle = "bold"
        
        android:text = "Open Source Software"

            />

</RelativeLayout>
