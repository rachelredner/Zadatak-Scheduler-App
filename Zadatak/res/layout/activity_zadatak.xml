<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background = "@drawable/hourglass1"
    android:screenOrientation = "portrait"
    android:configChanges="keyboardHidden|orientation"
    android:layout_height="fill_parent" 
    >
    
    
    

    
        <TextView
        android:id = "@+id/Welcome2"
        
        android:layout_centerHorizontal = "true"
      
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginTop="12dip"
        

        android:textSize="56dip"
        android:textStyle="bold"
        
        android:textColor="#BBBB9A"

        
        android:text = "Zadatak"
        />
        

    
    <Button
       android:id = "@+id/newtask"  
      
       android:text="Add a \n New Task"
       android:textSize = "24dip"
  

       
       android:layout_width="fill_parent"
       android:layout_toLeftOf = "@+id/CENTER"
       android:layout_marginRight = "4dip"
       
       
       android:layout_height="fill_parent"
       android:layout_above = "@+id/CENTER"
       android:layout_marginBottom = "5dip"
       
       android:layout_below = "@+id/Welcome2"
       android:layout_marginTop = "24dip"
       
       android:layout_alignParentLeft = "true"
       android:layout_marginLeft="10dip"
       
       android:background="#FFCCCCCC"
       
       
       />
    
    
    
    
     
    <Button 
        android:id = "@+id/tasklist"
        
        android:text = "Edit My \n Tasks"
        android:textSize = "24dip"
   

        
        android:layout_width = "fill_parent"
        android:layout_toRightOf = "@+id/CENTER"
        android:layout_marginLeft = "4dip"
        
        android:layout_height = "fill_parent"
        android:layout_above = "@+id/CENTER"
        android:layout_marginBottom = "5dip"
        
        android:layout_below = "@+id/Welcome2"
        android:layout_marginTop = "24dip"
        
        android:layout_alignParentRight = "true"
        android:layout_marginRight = "10dip"
        
        android:background="#FFCCCCCC"
        />
    
    
       <TextView 
        android:id = "@+id/CENTER"
        android:text = " " 
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_centerInParent = "true"
        />          

    
    <Button
        android:id = "@+id/todaystasks"
        
        android:text = "Today's \n Tasks"
        android:textSize = "24dip"

      
        
       android:layout_width="fill_parent"
       android:layout_toLeftOf = "@+id/CENTER"
       android:layout_marginRight = "4dip"
        
        android:layout_height = "fill_parent"
        android:layout_below = "@+id/CENTER"
        android:layout_marginTop = "5dip"
        
        android:layout_alignParentBottom = "true"
        android:layout_marginBottom = "122dip"
        
        android:layout_alignParentLeft = "true"
        android:layout_marginLeft = "10dip"    
        
        android:background="#FFCCCCCC"   
       
        />
    

    
    <Button
        android:id = "@+id/myprofile"
        
        android:text = "My \n Profile"
        android:textSize = "24dip"

        
        android:layout_width = "fill_parent"
        android:layout_toRightOf="@+id/CENTER"
        android:layout_marginLeft="4dip"
        
        
        android:layout_height = "fill_parent"
        android:layout_below = "@+id/CENTER"
        android:layout_marginTop = "5dip"
        
        android:layout_alignParentBottom = "True"
        android:layout_marginBottom = "122dip"
        
        android:layout_alignParentRight = "true"
        android:layout_marginRight = "10dip"
        
        android:background="#FFCCCCCC"

    
    />
    
    
    
    


                
                        
                        

                        <Button
                            android:id="@+id/scheduleButton"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom = "true"
                            android:layout_marginBottom = "6dip"
                           android:layout_alignParentRight="true"
                            android:layout_marginRight = "6dip"
                            android:background="#FFCCCCCC"
                            android:text="Schedule" />

</RelativeLayout>
